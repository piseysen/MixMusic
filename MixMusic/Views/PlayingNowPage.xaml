        <CommandBar Background="Gray" Opacity="0.8" Visibility="Collapsed">
            <AppBarButton x:Name="AppBarPrevButton" Icon="Previous" Label="Previous" Click="PrevButton_Click"/>

            <AppBarButton x:Name="AppBarPlayButton" Icon="Play" Label="Play" Click="PlayButton_Click"/>
            <AppBarButton x:Name="AppBarPauseButton" Icon="Pause" Label="Play" Click="PlayButton_Click"/>
            <AppBarButton x:Name="AppBarRefreshButton" Icon="Refresh" Label="Start"/>

            <AppBarButton x:Name="AppBarNextButton" Icon="Next" Label="Next" Click="NextButton_Click"/>

        </CommandBar>
    </Page.BottomAppBar>-->
</Page>
